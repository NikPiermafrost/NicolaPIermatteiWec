@model NicolaPIermatteiWec.Models.ViewModels.FirstPageModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    <div class="col-xl-6">
        <div class="card mb-5">
            <div class="card-header">
                Contatti per Distanza
            </div>
            <div class="card-body">
                <table id="table-cases" class="table table-striped table-bordered dt-responsive" style="width: 100%">
                    <thead>
                        <tr>
                            <th>Provincia</th>
                            <th>< 1 M.</th>
                            <th>da 1 a 1,5 M.</th>
                            <th>da 1,5 a 2 M.</th>
                            <th>da 2 a 2,5 M.</th>
                            <th>> 2,5 M.</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.DistanceByProvinces)
                        {
                            <tr>
                                <td>@item.Province</td>
                                <td>@item.LessThanOne</td>
                                <td>@item.FromOneToHalf</td>
                                <td>@item.FromHalfToTwo</td>
                                <td>@item.FromTwoToHalf</td>
                                <td>@item.MoreThanTwoHalf</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="col-xl-6">
        <div class="card mb-5">
            <div class="card-header">
                Tipi di contatto
            </div>
            <div class="card-body">
                <table id="table-contacts" class="table table-striped table-bordered dt-responsive" style="width: 100%">
                    <thead>
                        <tr>
                            <th>Provincia</th>
                            <th>Contatti</th>
                            <th>Positivi</th>
                            <th>Primo Livello</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.TypeOfRelevations)
                        {
                            <tr>
                                <td>@item.Province</td>
                                <td>@item.NumOfContacts</td>
                                <td>@item.NumOfPositives</td>
                                <td>@item.Proximity</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="col-xl-6">
        <div class="card mb-5">
            <div class="card-header">
                Primi 10 dispositivi per punteggio totale
            </div>
            <div class="card-body">
                <table id="table-toptenbyscore" class="table table-striped table-bordered dt-responsive" style="width: 100%">
                    <thead>
                        <tr>
                            <th>Id Dispositivo</th>
                            <th>Punteggio totale</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.TopTenByScores)
                        {
                            <tr>
                                <td>@item.DispoId</td>
                                <td>@item.Score</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div><div class="col-xl-6">
        <div class="card mb-5">
            <div class="card-header">
                Primi 10 dispositivi per contatti
            </div>
            <div class="card-body">
                <table id="table-toptenbycontacts" class="table table-striped table-bordered dt-responsive" style="width: 100%">
                    <thead>
                        <tr>
                            <th>Id Dispositivo</th>
                            <th>Numero Contatti</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.TopTenDevices)
                        {
                            <tr>
                                <td>@item.DispoId</td>
                                <td>@item.HowMany</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script>
        $(document).ready(function () {
            $('#table-cases').DataTable({
                responsive: true
            });
        });
        $(document).ready(function () {
            $('#table-contacts').DataTable({
                responsive: true
            });
        });
        $(document).ready(function () {
            $('#table-toptenbyscore').DataTable({
                responsive: true
            });
        });
    </script>
}
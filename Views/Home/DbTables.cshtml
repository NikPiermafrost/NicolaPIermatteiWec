@model NicolaPIermatteiWec.Models.DbModels.ResultForTables

<div class="d-flex justify-content-end pb-5">
    <form asp-action="DeleteData" method="post" asp-controller="Home">
        <button type="submit" class="btn btn-danger">Delete All Data</button>
    </form>
</div>
<div class="row">
    <div class="col-12">
        <div class="card mb-5">
            <div class="card-header">
                Scoring
            </div>
            <div class="card-body">
                <table id="table-scoring" class="table table-striped table-bordered dt-responsive" style="width: 100%">
                    <thead>
                        <tr>
                            <td>ScoringId</td>
                            <td>DispoId</td>
                            <td>DateOfRelevation</td>
                            <td>Score</td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Scorings)
                        {
                            <tr>
                                <td>@item.ScoringId</td>
                                <td>@item.DispoId</td>
                                <td>@item.DateOfRelevation</td>
                                <td>@item.Score</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="col-12">
        <div class="card mb-5">
            <div class="card-header">
                Positives
            </div>
            <div class="card-body">
                <table id="table-positive" class="table table-striped table-bordered dt-responsive" style="width: 100%">
                    <thead>
                        <tr>
                            <td>DispoId</td>
                            <td>DatePositive</td>
                            <td>Positive</td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.PositiveTables)
                        {
                            <tr>
                                <td>@item.DispoId</td>
                                <td>@item.DatePositive</td>
                                <td>@item.Positive</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="col-12">
        <div class="card mb-5">
            <div class="card-header">
                Daily Contacts
            </div>
            <div class="card-body">
                <table id="table-daily" class="table table-striped table-bordered dt-responsive" style="width: 100%">
                    <thead>
                        <tr>
                            <td>DailyContactId</td>
                            <td>DispoId</td>
                            <td>DispoContactId</td>
                            <td>DateContact</td>
                            <td>Distance</td>
                            <td>Latitude</td>
                            <td>Longitude</td>
                            <td>Province</td>
                            <td>Prox</td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.DailyContacts)
                        {
                        <tr>
                            <td>@item.DailyContactId</td>
                            <td>@item.DispoId</td>
                            <td>@item.DispoContactId</td>
                            <td>@item.DateContact</td>
                            <td>@item.Distance</td>
                            <td>@item.Latitude</td>
                            <td>@item.Longitude</td>
                            <td>@item.Province</td>
                            <td>@item.Prox</td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#table-daily').DataTable({
                responsive: true
            });
            $('#table-scoring').DataTable({
                responsive: true
            });
            $('#table-positive').DataTable({
                responsive: true
            });
        });
    </script>
}